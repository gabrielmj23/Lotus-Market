<%- include("partials/header"); %>
<h1><%- title.slice(14); %></h1>
<h6><strong>Name: </strong><%- item.name %></h6>
<h6><strong>Description: </strong><%- item.description %></h6>
<% if (item.imgname) { %>
    <img class="mt-3" src="../../../images/<%- item.imgname %>" height="200" width="200"> 
<% } %>
<hr>
<p class="text-danger"><strong>Are you sure you want to delete this item?</strong></p>
<form method="post" action="">
    <div class="form-group mb-3">
        <input id="itemid" class="form-control" type="hidden" name="itemid" required="true" value="<%- item._id %>">
        <% if (item.imgname) { %>
           <input id="itemimg" class="form-control" type="hidden" name="itemimg" required="true" value="<%- item.imgname %>"> 
        <% } %>
    </div>
    <div class="form-group mb-3">
        <label for="pw">Admin Password: </label>
        <input id="pw" class="form-control" type="password" placeholder="Password" autocomplete="off" name="pw" required="true">
    </div>
    <button class="btn btn-danger" type="submit">Delete</button>
</form>
<% if (typeof errors !== 'undefined') { %>
    <ul>
        <% errors.forEach(error => { %>
            <li class="text-danger"><%- error.msg %></li>
        <% }); %>
    </ul>
<% } %>
<%- include("partials/footer"); %>